<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%completed = @task.completed ? 'completed' : 'not completed' %>
<p><%= completed %></p>


<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit this task', edit_task_path %>
<%= link_to 'delete this task', task_path(@task),
    data: { turbo_method: :delete, turbo_confirm: "Are you sure"} %>
